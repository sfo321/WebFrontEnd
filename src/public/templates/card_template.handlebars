<div class="main__cards__container cards__container">
    <div class="row">
        {{#each this}}
        <div class="large-4 medium-4 small-12 columns">
            <article class="card">
                <div data-index="1" class="card__icon"></div>
                <h5 class="card__heading card__heading--dark">{{this.heading}}</h5>
                <p class="card__body card__body--dark">{{this.content}}<br> <a href="/About-us" class="card__button">Read
            more</a></p>
            </article>
        </div>
        {{/each}}
    </div>
</div>